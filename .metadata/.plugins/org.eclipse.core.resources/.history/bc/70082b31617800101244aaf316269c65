package com.example.scraper.scraperController;

import java.util.Map;

import org.springframework.web.bind.annotation.CrossOrigin;
import org.springframework.web.bind.annotation.GetMapping;
import org.springframework.web.bind.annotation.RequestParam;
import org.springframework.web.bind.annotation.RequestMapping;
import org.springframework.web.bind.annotation.RestController;

import com.example.scraper.scraperService.ScraperService;

@CrossOrigin(origins = "*")
@RequestMapping("/scrape")
@RestController
public class ScrapperController {

    // Example: /scrape/weather?city=London
    @GetMapping("/weather")
    public Map<String, String> getWeather(@RequestParam String city) {
        return ScraperService.scrapeWeather(city);
    }
}
